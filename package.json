{
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "web:echo": "(cd apps/web/ && make echo)",
    "web:dev": "yarn workspace web dev",
    "web:build": "yarn workspace @gold-point-tool/db generate && yarn workspace web build",
    "web:start": "yarn workspace web start",
    "db:dev": "yarn workspace @gold-point-tool/db dev",
    "db:deploy": "yarn workspace @gold-point-tool/db deploy",
    "db:generate": "yarn workspace @gold-point-tool/db generate",
    "db:seed": "yarn workspace @gold-point-tool/db seed",
    "db:studio": "yarn workspace @gold-point-tool/db studio",
    "ncu": "yarn workspace web ncu && yarn workspace @gold-point-tool/db ncu",
    "clean": "find . -name 'node_modules' -type d  -prune | awk '{print \"rm -rf\", $0}' | sh",
    "ncuu": "yarn workspaces foreach -A run ncuu",
    "ncum": "yarn workspace web ncum && yarn workspace @gold-point-tool/db ncum",
    "ncumu": "yarn workspaces foreach -A run ncumu"
  },
  "overrides": {
    "glob": "^11.1.0"
  },
  "engines": {
    "npm": "use yarn instead",
    "yarn": "4.12.0"
  },
  "packageManager": "yarn@4.12.0"
}
